{
  "manifest_version": 2,
  "name": "Broadway Lottery",
  "version": "1.0",
  "description": "An easy way to sign up for your Broadway Lotteries.",
  "browser_action": {
    "default_icon": "bl_icon.png",
    "default_title": "Broadway Lotteries",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://lottery.broadwaydirect.com/*"],
      "js": ["broadway.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "debugger",
    "activeTab",
    "tabs" ,
    "*://lottery.broadwaydirect.com/*",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
